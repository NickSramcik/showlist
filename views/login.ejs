<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- reset and normalize -->
    <link rel="stylesheet" href="css/normalize.css">
    <link rel="stylesheet" href="css/reset.css">
    <link rel="stylesheet" href="css/style.css">

    <!-- fontawesome stylesheet -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <title>Login</title>
</head>
<body>
    <%- include('partials/navbar.ejs') %>

    <section id="login-section">

        
        

        <div id="login-form" class="form-container">
            <h1>Welcome back!</h1>
            <p>Glad you've returned! Please enter your details.</p>

            <!-- warnings below -->
            <% if (locals.messages.errors) { %>
                <% messages.errors.forEach( el => { %>
                    <div class="alert alert-danger"><%= el.msg %></div>
                <% }) %>    
            <% } %>
            <% if (locals.messages.info) { %>
                <% messages.info.forEach( el => { %>
                    <div class="alert alert-danger"><%= el.msg %></div>
                <% }) %>    
            <% } %>

            <form action="/login" method="POST">
                <input type="email" name="email" placeholder="Email" class="underlined-input">
                <input type="password" name="password" placeholder="Password" class="underlined-input">
                <input type="submit" class="btn full-btn" value="Log in">
            </form>
            <p>Don't have an account? 
                <a href="/signup">Sign up for free!</a>
            </p>
        </div>
    </section>


    <%- include('partials/footer.ejs') %>

</body>
</html>