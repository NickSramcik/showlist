<%- include('partials/head.ejs') %>
<body>
  <nav>
    <a href="/">
      <img
        class="logo"
        src="assets/best-buds-logo.png"
        alt="movie-guide-logo"
      />
    </a>

    <h1><%= user.userName %>'s Watch list</h1>

    <a class="logout" href="/logout">Logout</a>
  </nav>

  <div class="formInputs">
    <!-- <h1><%= user.userName %> has <%= left %> items in watch list.</h1> -->

    <!-- //flash alert for failed query request -->
    <form
      class="formInput"
      autocomplete="off"
      action="/movies/createMovie"
      method="POST"
    >
      <div class="autocomplete">
        <input
          id="myInput"
          type="text"
          name="movieItem"
          placeholder="Search for a movie or show"
        />
        <button id="submitButton" type="submit" title="Search and Add to List">
          <i class="fa fa-search"></i>
        </button>
      </div>
    </form>

    <% if (messages.errors) { %> <% messages.errors.forEach( el => { %>
    <h2><div class="alert alert-danger"><%= messages.errors%></div></h2>
    <% }) %> <% } %>
  </div>

  <ul class="tabs">
    <li data-tab-target="#home" id="left" class="active tab">Watch List</li>
    <li data-tab-target="#watched" id="right" class="tab">Seen List</li>
  </ul>

  <div class="tab-content">
    <div id="home" data-tab-content class="active">
      <div class="gallery-container movielist">
        <% movies.forEach( el => { %> <%if (el.watched === false) {%>
        <div class="movie-card">
          <li class="movieItem" data-id="<%=el._id%>">
            <img class='movie-image' src='<%=el.image%>' alt=''poster image'
            width='128' >
            <!-- <span class='not'><%= el.title %></br></span> -->
            <div class="icon-background" data-id="<%=el._id%>">
              <span
                title="Mark Watched"
                class="watchedMovie fa fa-binoculars"
              ></span>
              <!-- <span title='Recommend to Others' class='liked fa fa-arrow-up'></span> -->
              <span
                title="Remove from List"
                class="del fa fa-circle-xmark"
              ></span>
            </div>
          </li>
        </div>
        <%}%> <% }) %>
      </div>
    </div>

    <div id="watched" data-tab-content>
      <div class="gallery-container movielist">
        <% movies.forEach( el => { %> <%if (el.watched === true) {%>

        <div class="movie-card" data-id="<%=el._id%>">
          <img class='movie-image' src='<%=el.image%>' alt=''poster image'
          width='128'>
          <div class="icon-background" data-id="<%=el._id%>">
            <span
              title="Mark Unwatched"
              class="unWatchedMovie fa fa-binoculars"
            ></span>
            <%if (el.recommend === false) {%>
            <span title="Recommend to Others" class="like fa fa-star"></span>
            <%}%> <%if (el.recommend === true) {%>
            <span
              title="Un-recommend to Others"
              class="unlike fa fa-star"
            ></span>
            <%}%>
            <span
              title="Remove from List"
              class="del fa fa-circle-xmark"
            ></span>
          </div>
        </div>
        <%}%> <% }) %>
      </div>
    </div>

    <div class="recommendTitle">
      <h1>Most Recommended</h1>
    </div>
    <div id="reclist">
      <% dbMovies.forEach( el => { %>
      <div class="movie-cardrec" data-id="<%=el._id%>">
        <img class="movie-image" src="<%=el.image%>" alt=""poster image"
        width="128" >
      </div>
      <% }) %>
    </div>

    <div class="watchTitle">
      <h1>Most Watched</h1>
    </div>
    <div id="watchlist">
      <% dbMovies.forEach( el => { %>
      <div class="movie-cardwatch" data-id="<%=el._id%>">
        <img class="movie-image" src="<%=el.image%>" alt=""poster image"
        width="128" >
      </div>
      <% }) %>
    </div>
  </div>

  <!-- <%- include('partials/footer.ejs') %> -->

  <script src="js/main.js"></script>
</body>

<%- include('partials/tail.ejs') %>
